{
  "name": "challenge-league",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "prisma generate && next build",
    "build:prod": "prisma generate && prisma migrate deploy && next build",
    "start": "next start",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    "db:seed": "tsx prisma/seed.ts",
    "db:init": "prisma migrate dev --name init && npm run db:seed",
    "db:reset": "prisma migrate reset --force && npm run db:seed",
    "postinstall": "prisma generate",
    "auth:generate-secret": "node scripts/generate-auth-secret.js",
    "test": "vitest",
    "test:unit": "vitest run",
    "test:integration": "playwright test",
    "test:integration:ui": "playwright test --ui",
    "test:integration:basic": "playwright test tests/integration/basic-user-flow.spec.ts",
    "test:setup": "playwright install",
    "test:cleanup": "node scripts/cleanup-test-files.js",
    "test:all": "npm run test:unit && npm run test:integration:basic",
    "test:db:start": "docker compose -f docker-compose.test.yml up -d",
    "test:db:stop": "docker compose -f docker-compose.test.yml down",
    "test:db:reset": "docker compose -f docker-compose.test.yml down -v && docker compose -f docker-compose.test.yml up -d",
    "test:db:check": "node scripts/check-db-connection.js",
    "test:integration:isolated": "node scripts/run-integration-tests.js"
  },
  "dependencies": {
    "@auth/prisma-adapter": "^2.10.0",
    "@prisma/client": "^6.12.0",
    "@react-email/components": "^0.5.5",
    "@tanstack/react-query": "^5.85.5",
    "@tanstack/react-query-devtools": "^5.85.5",
    "@types/bcryptjs": "^2.4.6",
    "@types/dompurify": "^3.0.5",
    "@types/express-rate-limit": "^5.1.3",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "@vercel/analytics": "^1.5.0",
    "@vercel/blob": "^1.1.1",
    "bcryptjs": "^3.0.2",
    "dompurify": "^3.2.7",
    "exifr": "^7.1.3",
    "express-rate-limit": "^8.1.0",
    "next": "^14.2.16",
    "next-auth": "^4.24.11",
    "prisma": "^6.12.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-email": "^4.2.12",
    "resend": "^6.1.2",
    "tsx": "^4.20.3",
    "web-push": "^3.6.7"
  },
  "devDependencies": {
    "@playwright/test": "^1.55.0",
    "@types/node": "^20.17.10",
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "@types/web-push": "^3.6.4",
    "@vitejs/plugin-react": "^5.0.2",
    "autoprefixer": "^10.4.20",
    "dotenv-cli": "^10.0.0",
    "eslint": "^8.57.0",
    "eslint-config-next": "^14.2.16",
    "jsdom": "^26.1.0",
    "postcss": "^8.5.3",
    "tailwindcss": "^3.4.15",
    "typescript": "^5.7.2",
    "vitest": "^3.2.4"
  }
}
